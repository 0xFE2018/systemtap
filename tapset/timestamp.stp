/**
 * sfunction get_cycles - Processor cycle count.
 *
 *  Return the processor cycle counter value, or 0 if unavailable.
 */
function get_cycles:long () %{ /* pure */
  cycles_t c = get_cycles();
  THIS->__retvalue = (int64_t) c;
%}

