// <tapsetdescription>
// Programmable delays at probe sites.
// </tapsetdescription>

%{
/* guru */
#undef STP_OVERLOAD
#include <linux/delay.h>
%}

function mdelay(ms:long) %{
  /* guru */
  mdelay(THIS->ms);
%}

function udelay(us:long) %{
  /* guru */
  udelay(THIS->us);
%}
