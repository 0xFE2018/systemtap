#! stap -p4

probe process.create {
  log(pp())
  log(sprint(task))
}

probe process.start {
  log(pp())
}

probe process.exec {
  log(pp())
  log(filename)
}

probe process.exec.complete {
  log(pp())
  log(sprint(errno))
  log(sprint(success))
}

probe process.exit {
  log(pp())
  log(sprint(code))
}

probe process.release {
  log(pp())
  log(sprint(task))
}

probe process.signal.send {
  log(pp())
  log(sprint(signal))
  log(signal_name)
  log(sprint(task))
  log(sprint(shared))
}

